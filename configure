#!/bin/sh

set -eu

fail() {
  echo "$0: $*" >&2
  exit 1
}

janetheadercflags=""
prefix="/usr"
CC="cc"
CFLAGS="-Wall -Werror -O2"
LDFLAGS="-shared"

for arg ; do
  case "$arg" in
  --prefix=*) prefix=${arg#*=} ;;  
  --janet-header-cflags=*) janetheadercflags=${arg#*=} ;;
  CC=*) CC=${arg#*=} ;;
  CFLAGS=*) CFLAGS=${arg#*=} ;;
  *) fail "unknown option '$arg'"
  esac
done

if test -z "$janetheadercflags"
then
  janetheadercflags=$(pkg-config --cflags janet)
fi

CFLAGS="-fPIC ${CFLAGS} ${janetheadercflags}"

echo "configured with:"
echo "prefix=${prefix}"
echo "CC=$CC"
echo "CFLAGS=$CFLAGS"
echo "LDFLAGS=$LDFLAGS"

echo "writing config.mk"
cat >config.mk <<EOF
PREFIX=${prefix}
CC=${CC}
CFLAGS=${CFLAGS}
LDFLAGS=${LDFLAGS}
EOF

