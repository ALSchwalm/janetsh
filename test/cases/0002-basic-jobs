#! /usr/bin/env janetsh

(import sh)

(sh/$ true)

(try (do (sh/$ false) (error "fail") ) ([e] nil))

(when (not= (sh/$$ echo -n hello) "hello")
  (error "fail"))

(when (not= (sh/$$_ echo hello) "hello")
  (error "fail"))

(when (not= (sh/$? sh -c "exit 3") 3)
  (error "fail"))

(when (not (sh/$?? true))
  (error "fail"))

(when (sh/$?? false)
  (error "fail"))

(def j1 (sh/$ sleep "0.1" &))
(def j2 (sh/$ sleep "120" &))
(sh/wait-for-job j1)
(sh/terminate-all-jobs)
(sh/wait-for-job j2)
